package com.loiane.cursojava.aula13;

import java.util.Scanner;

// Faça um programa que pergunte quanto você ganha por hora e o n. horas trabalhadas mês;
// Calcule e mostre o total do salário com desconto de 11% IR / 8% INSS / 5% Sindicato
// Mostrar: Salario bruto, vl pg INSS, vl pago Sindicato, salario liquido

public class Exercicio13 {

	public static void main(String[] args) {
		
		Scanner scan = new Scanner(System.in);
		
		System.out.println("Entre com o valor da hora trabalhada: ");
		double vlHora = scan.nextDouble();
		
		System.out.println("Entre com o nº de horas trabalhadas: ");
		int nHora = scan.nextInt();
		
		double salario = vlHora * nHora;
		
		double ir = salario * ((11 * 100) / 100); 
		int inss = (8 * 100) / 100;
		int sindicato = (5 * 100) / 100;
		
		System.out.println("Salário Bruto: " + salario);
		System.out.println("Valor pago de IR: " + ir);
		
	}

}
